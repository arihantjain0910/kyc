        // Validation for nominee percentages
        document.getElementById('kycForm').addEventListener('submit', function(event) {
            var nominee1Percent = parseFloat(document.getElementById('nominee1_percent').value) || 0;
            var nominee2Percent = parseFloat(document.getElementById('nominee2_percent').value) || 0;
            var nominee3Percent = parseFloat(document.getElementById('nominee3_percent').value) || 0;
            var totalPercent = nominee1Percent + nominee2Percent + nominee3Percent;

            if (totalPercent !== 100) {
                alert('The total percentage of Nominee 1, Nominee 2, and Nominee 3 must equal 100%.');
                event.preventDefault(); // Prevent form submission
            }
        });

